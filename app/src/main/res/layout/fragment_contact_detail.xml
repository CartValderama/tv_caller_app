<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_background"
    android:padding="16dp">

    <!-- Header with Go Back and Edit Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <!-- Go Back Button (Left) -->
        <TextView
            android:id="@+id/btn_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="24dp"
            android:minHeight="52dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:text="@string/go_back"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:contentDescription="@string/go_back" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Edit Button (Right) -->
        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="24dp"
            android:minHeight="52dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:text="@string/edit_contact"
            android:textColor="#1976D2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:contentDescription="@string/edit_contact" />
    </LinearLayout>

    <!-- Contact Details Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Contact Name -->
        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/contact_name_placeholder"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Profile Icon -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/profile_icon_border"
            android:contentDescription="@string/profile_icon">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/profile_icon"
                android:textColor="#039BE5"
                android:textSize="64sp"
                android:contentDescription="@string/profile_icon" />
        </FrameLayout>

        <!-- Phone Number -->
        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_placeholder"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <!-- Call Button -->
        <TextView
            android:id="@+id/btn_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="#388E3C"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/call"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:contentDescription="@string/call" />

        <!-- Remove Contact Button -->
        <TextView
            android:id="@+id/btn_remove_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:text="@string/remove_contact"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#D32F2F"
            android:padding="16dp"
            android:layout_marginStart="4dp"
            android:focusable="true"
            android:clickable="true"
            android:contentDescription="@string/remove_contact" />
    </LinearLayout>

</LinearLayout>
